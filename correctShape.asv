function shape = correctShape(diff,next_diff,thres)

angleMessage = 'Change Angle!';
firstAngle = 'Go, first Angle!';
blobMessage = 'Blob!';
sameMessage = 'Same as previous...';

if((diff > thres) && (next_diff > thres))
    if(counter )
        shape = firstAngle;
    else
        shape = angleMessage;
    end
elseif((next_diff > thres) && (diff < thres))
    shape = sameMessage;
else
    shape = blobMessage;
end

end

